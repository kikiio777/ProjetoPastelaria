@model TarefasModel
@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="text-center">
    <h1>Editar Tarefa</h1>
</div>

<form asp-controller="Tarefas" asp-action="Editar" method="post">

    <input type="hidden" asp-for="IdTarefa" />
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Descrição da tarefa">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>
    <div class="form-group">
        <label for="prazoConclusao">Data de Vencimento</label>
        <input type="date" asp-for="PrazoConclusao" class="form-control" placeholder="Prazo da tarefa">
        @Html.ValidationMessageFor(x => x.PrazoConclusao)
    </div>

    <a role="button" class="btn btn-secondary" asp-controller="Tarefas" asp-action="Index">Voltar</a>
    <button type="submit" class="btn btn-primary">Alterar</button>
</form>
