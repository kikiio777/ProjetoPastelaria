@model List<TarefasModel>
@{
    ViewData["Title"] = "Lista-Tarefas";
}

<div class="text-center">
    @*comando utilizado pra colocar o botao criar no canto esquerdo*@
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Tarefas" asp-action="Criar">Adicionar nova Tarefa</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1> Listagem-Tarefas</h1>
    <br />
    <table class="table" id="table-tarefas">
        <thead>
            <tr>
                <th scope="col">#</th>
                @*<th scope="col">Id</th>*@
                <th scope="col">Descricao</th>
                <th scope="col">DataVencimento</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (TarefasModel tarefas in Model)
                {
            <tr>
                <td scope="row">@tarefas.IdTarefa</td>
                <td scope="row">@tarefas.Descricao</td>
                <td scope="row">@tarefas.PrazoConclusao</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-secondary" asp-route-id="@tarefas.IdTarefa" asp-controller="Tarefas" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@tarefas.IdTarefa" asp-controller="Tarefas" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
                }
            }
            else
            {
                <tr class="add"><td valign="top" colspan="5">Nenhuma Tarefa Encontrada</td></tr>
            }

        </tbody>
    </table>
</div>
