@model List<FuncionarioModel>
@{
    ViewData["Title"] = "Lista-Funcionarios";
}

<div class="text-center">
    @*comando utilizado pra colocar o botao criar no canto esquerdo*@
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Funcionarios" asp-action="Criar">Adicionar novo Funcionario</a>
    </div>
    <br />
    <h1> Listagem-Funcionarios</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome Completo</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">Tel Fixo</th>
                <th scope="col">Celular</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (FuncionarioModel funcionarios in Model)
                {
                    <tr>
                        <th scope="row">@funcionarios.Id</th>
                        <td> @funcionarios.NomeCompleto</td>
                        <td>@funcionarios.DataNasc</td>
                        <td>@funcionarios.TelFixo</td>
                        <td>@funcionarios.Celular</td>
                        <td>@funcionarios.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-secondary"asp-route-id="@funcionarios.Id" asp-controller="Funcionarios" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@funcionarios.Id" asp-controller="Funcionarios" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
